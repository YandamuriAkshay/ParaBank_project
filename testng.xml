<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Parabank Suite" parallel="false">
  
  <!-- Default browser (can be overridden via Maven CLI) -->
  <parameter name="browser" value="chrome"></parameter>

  <!-- Main Cucumber Runner -->
  <test verbose="2" name="CucumberTests">
    <classes>
      <class name="com.capstone.runners.TestNGCucumberRunnerTest"/>
    </classes>
  </test>

  <!-- Optional Sanity JUnit -->
  <test name="JUnitSanity">
    <classes>
      <class name="com.capstone.junit.SanityJUnitTest"/>
    </classes>
  </test>

</suite>
